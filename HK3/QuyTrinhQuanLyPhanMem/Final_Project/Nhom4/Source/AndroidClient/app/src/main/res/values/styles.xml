<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuthenticatorTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="colorPrimary">@color/actionBarColor</item>
        <item name="colorPrimaryDark">@color/statusBarColor</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorAccent">@color/google_blue_500</item>
    </style>

    <style name="HowItWorksButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:minWidth">72.0dip</item>
        <item name="android:minHeight">48.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="HowItWorksTextHeadingStyle">
        <item name="android:textSize">24.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="HowItWorksTextBodyStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="AuthenticatorTheme.NoActionBar" parent="@style/AuthenticatorTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AuthenticatorTheme.NoTitleBar" parent="@style/AuthenticatorTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AuthenticatorTheme.Translucent.NoTitleBar" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">0.0dip</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <style name="ToolbarTitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20.0sp</item>
    </style>

    <style name="AuthenticatorTheme.WhiteAccentColor" parent="@style/AuthenticatorTheme">
        <item name="colorAccent">#ffffffff</item>
    </style>

    <style name="ButtonBarButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/AuthenticatorTheme.WhiteAccentColor</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/google_blue_500</item>
    </style>

</resources>
