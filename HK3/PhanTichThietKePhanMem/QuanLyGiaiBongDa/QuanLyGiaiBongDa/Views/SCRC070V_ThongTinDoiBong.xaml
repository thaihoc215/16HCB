        <TextBlock x:Name="tblCLB" Margin="80,10,80,30" TextWrapping="Wrap" 
                   Text="Hoàng Anh Gia Lai"
                   FontSize="30" TextAlignment="Center" Grid.Column="1" Grid.ColumnSpan="4" FontWeight="Bold" Foreground="#FF60C9BF"/>
        <TextBlock x:Name="LOGO" Margin="10,52,10,5" TextWrapping="Wrap" 
                   Text="Logo"
                   FontSize="25" TextAlignment="Center" FontWeight="Bold" Foreground="White"/>


    </Grid>
</Controls:MetroWindow >
 
